@model TrainersIndexViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Lives
            </th>
            <th>
                Speed
            </th>
            <th>
                Thumbnail
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.CapturedPokemons) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lives)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Speed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Thumbnail)
            </td>
            <td>
                <a asp-controller="Pokemons" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-controller="Pokemons" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-controller="Pokemons" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<partial name="_CaptureForm" />
